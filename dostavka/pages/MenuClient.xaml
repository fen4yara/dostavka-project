        <Button Content="Отзывы" Padding="10" Margin="0,140,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Click="review"/>
        <Button Content="Назад" Padding="10" Margin="0,376,0,0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="back"/>

    </Grid>
