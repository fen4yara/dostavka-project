<Page x:Class="dostavka.pages.Reg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:dostavka.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reg">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="UsernameInput" Text="Имя" Width="300" Margin="5"/>
            <TextBox x:Name="Telegram" Text="Телеграм" Width="300" Margin="5"/>
            <PasswordBox x:Name="PasswordInput" Password="Пароль"  Width="300" Margin="5"/>
            <TextBlock x:Name="ErrorMessage" Foreground="Red" Visibility="Collapsed" Margin="5"/>
            <Button Content="Зарегистрироваться как заказчик" Width="300" Margin="5" Click="RegisterClient_Click"/>
            <Button Content="Зарегистрироваться как курьер" Width="300" Margin="5" Click="RegisterCourier_Click"/>
            <Button Content="Уже есть аккаунт? Войдите" Width="300" Margin="5" Click="Login_Click"/>
        </StackPanel>
    </Grid>
</Page>
