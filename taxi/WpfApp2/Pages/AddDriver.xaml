<Page x:Class="WpfApp2.Pages.AddDriver"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddDriver">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Добавление водителя" FontSize="24" HorizontalAlignment="Center" Margin="0,10" />
            <TextBox x:Name="FirstNameTextBox" Text="Имя" Margin="0,10" Width="250"/>
            <TextBox x:Name="LastNameTextBox" Text="Фамилия" Margin="0,10" Width="250"/>
            <TextBox x:Name="PhoneTextBox" Text="Телефон" Margin="0,10" Width="250"/>
            <TextBox x:Name="EmailTextBox" Text="Почта" Margin="0,10" Width="250"/>
            <Button Content="Добавить" Click="AddDriverButton_Click" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
