<Page x:Class="WpfApp2.Pages.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <TextBlock Text="Главное меню" FontSize="24" HorizontalAlignment="Center" Margin="0,20" />

            <Button Content="Товары" Width="200" Height="40" Margin="10" Click="VehicleManagement_Click"/>
            <Button Content="Курьеры" Width="200" Height="40" Margin="10" Click="DriverManagement_Click"/>
            <Button Content="Заказы" Width="200" Height="40" Margin="10" Click="OrderManagement_Click"/>
            <Button Content="Выйти" Width="200" Height="40" Margin="10" Click="Button_Click"/>
        </StackPanel>
        
    </Grid>
</Page>
