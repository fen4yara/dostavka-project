<Page x:Class="WpfApp2.Pages.AddOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddOrder">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Добавление заказа" FontSize="24" HorizontalAlignment="Center" Margin="0,10" />
            <TextBox x:Name="CustomerNameTextBox" Text="Имя заказчика" Margin="0,10" Width="250"/>
            <TextBox x:Name="CustomerPhoneTextBox" Text="Телефон" Margin="0,10" Width="250"/>
            <TextBox x:Name="PickupLocationTextBox" Text="Состав заказа" Margin="0,10" Width="250"/>
            <TextBox x:Name="DropoffLocationTextBox" Text="Куда" Margin="0,10" Width="250"/>
            <Button Content="Add Order" Click="AddOrderButton_Click" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
